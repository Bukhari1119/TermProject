<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Discover Pakistan</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DiscoverPakistan", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Destinations", "Destinations", "Destinations")</li>
                    <li>@Html.ActionLink("Tour Calendar", "Calendar", "Calendar")</li>
                    <li>@Html.ActionLink("Gallery", "Gallery", "Gallery")</li>
                    <li>@Html.ActionLink("About Us", "About", "About")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Contact")</li>
                    <li>@Html.ActionLink("Search", "Search", "Gallery")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                <li data-target="#carousel-example-generic" data-slide-to="3"></li>
                <li data-target="#carousel-example-generic" data-slide-to="4"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="/images/1.jpg" alt="...">
                    <div class="carousel-caption">
                        <h3>The fool wanders, a wise man travels</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="/images/darewar3.jpg" height="300" width="1200" alt="...">
                    <div class="carousel-caption">
                        <h3>No way shouldn't be an excuse to end your journey</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="/images/3.jpg" height="300" width="1200" alt="...">
                    <div class="carousel-caption">
                        <h3>The view is more beautiful from the top</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="/images/4.jpg" height="300" width="1200" alt="...">
                    <div class="carousel-caption">
                        <h3>Where the road ends, our journey begins</h3>
                    </div>
                </div>
                <div class="item">
                    <img src="/images/5.jpg" height="300" width="1200" alt="...">
                    <div class="carousel-caption">
                        <h3>Not all those who wander are lost</h3>
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div> <!-- Carousel -->
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Discover Pakistan</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>