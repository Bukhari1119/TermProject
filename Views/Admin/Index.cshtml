        <div class="col-md-12">
            <a href="/Admin/AddAdmin">Add Admin</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="/Admin/ShowAdmin">See All Admins</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="/Admin/SearchAdmin">Search Admin</a>
