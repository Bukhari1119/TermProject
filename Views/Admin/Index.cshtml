@{
    ViewBag.Title = "Index";
}
@if(Session["loginAdmin"] == null || (int)Session["loginAdmin"] != 1)
{
       <h2>Please login as admin!</h2>
}
else
{
    <h2>Admin Menu</h2>
    <h3>Manage Users</h3>
    <div class="row">
        <div class="col-md-12">
            <a href="/Admin/Add">Add User</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="/Admin/Show">See All Users</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="/Admin/Search">Search User</a>
        </div>
    </div>

    <h3>Manage Admins</h3>
